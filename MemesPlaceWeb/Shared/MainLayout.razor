@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<CascadingAuthenticationState>
<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
            <AuthorizeView>
                <Authorized>
                    <MudMenu  Color="Color.Inherit">
                        <ActivatorContent>
                            <MudChip Icon="@Icons.Material.Filled.Person" Color="Color.Primary">@context.User.Identity.Name</MudChip>
                        </ActivatorContent>
                        <ChildContent>
                            <MudMenuItem><MudNavLink Href="/users/profile/" Match="NavLinkMatch.Prefix">Profile</MudNavLink></MudMenuItem>
                        <MudMenuItem>Settings</MudMenuItem>
                        <MudMenuItem><MudNavLink Href="/users/logout" Match="NavLinkMatch.Prefix">Logout</MudNavLink></MudMenuItem>
                        </ChildContent>
                    </MudMenu>
                </Authorized>
                <NotAuthorized>
                    <MudSpacer />
                    <MudGrid Class="align-content-end">
                         <MudSpacer />
                         <MudItem xs="2">

                    <MudNavLink Href="/users/login" Match="NavLinkMatch.Prefix" object-right>Login</MudNavLink>
                    </MudItem>

                    <MudItem xs="2">

                    <MudNavLink Href="/users/register" Match="NavLinkMatch.Prefix" object-right>Register</MudNavLink>
                    </MudItem>

                     </MudGrid>
                </NotAuthorized>
            </AuthorizeView>
        
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">MemesPlace</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
            <AuthorizeView>
            <Authorized>         
                    <MudNavLink Href="/upload" Match="NavLinkMatch.Prefix">Upload</MudNavLink>

            </Authorized>

            <NotAuthorized>
                    <MudNavLink Href="/users/login" Match="NavLinkMatch.Prefix">Login</MudNavLink>
                    <MudNavLink Href="/users/register" Match="NavLinkMatch.Prefix">Register</MudNavLink>

            </NotAuthorized>
        </AuthorizeView>
           
        </MudNavMenu>
        
    </MudDrawer>
        <MudMainContent >
            <MudContainer MaxWidth="MaxWidth.Large" Class="">
                @Body
            </MudContainer>
        
    </MudMainContent>
    </MudLayout>
</CascadingAuthenticationState>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}